<!--5. Необходимо реализовать выполнение метода в потоке.
 На Window необходимо отображать информацию о ходе выполнения метода. -->
<Window x:Class="ThreadMethodApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThreadMethodApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Name="ResultLabel"></Label>
        <Button Grid.Row="1" Click="CountToNumber">Начать счёт</Button>
    </Grid>
</Window>
